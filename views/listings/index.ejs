<% layout('/layouts/boilerplate') -%>
<br>
<body>
    <%- include ("../includes/filters.ejs") %>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for (let listing of listings) { %>
            <a href="/listings/<%= listing._id %>" class="card-link">
                <div class="card listingCard col" style="margin-bottom: 1rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem; object-fit: cover; border-radius: 0.5rem;">
                    <div class="card-body">
                    <h5 class="card-title"><strong><%= listing.title %></strong></h5>
                    <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
                    <p class="card-price" data-price="<%= listing.price %>">
                        <strong>&#8377;<%= listing.price.toLocaleString('en-in') %></strong>/ Night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

</body>