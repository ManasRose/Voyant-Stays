<% layout('/layouts/boilerplate') -%>
<script>
    const mapToken='<%=process.env.MAP_TOKEN%>';
    const coordinates=<%- JSON.stringify(listingShow.geometry.coordinates)%>;
</script>
<body><br>
    <h3 class="offset-3 "><b><%=listingShow.title%></h3>

    <div class="cardShow offset-3" style="width: 40rem;">
        <img src="<%=listingShow.image.url%>" class="card-img-top" alt="<%=listingShow.title%>" style="height: 20rem; object-fit: cover; border-radius: 1rem;">
        <div class="card-body">
            <p class="card-text">
                <strong>Owned By : </strong><i><%=listingShow.owner.username%></i>
                <p><i><%=listingShow.description%></i></p> <br>
                <strong>&#8377; <%=listingShow.price.toLocaleString('en-in')%></strong>/ Night <br>
                <strong>Location:</strong> <%=listingShow.location%> <br>
                <strong>Country:</strong> <%=listingShow.country%> <br>
            </p>
        </div>
    </div>
    <% if(currUser && currUser._id.equals(listingShow.owner._id)){ %>
        <div class="show-page-buttons offset-3 mt-3  mb-3">
            <form action="/listings/<%= listingShow._id %>/edit" class="offset-0" method="GET">
                <button type="submit" class="btn btn-dark editBtn">Edit Listing</button>
            </form>

            <form action="/listings/<%= listingShow._id %>?_method=DELETE" class="offset-1" method="POST">
                <button type="submit" class="btn btn-dark deleteBtn">Delete</button>
            </form>
        </div>
    <%}%>

    <hr class="offset-3" >
    
    <% if(currUser){%>
        <div class="rev offset-3">
            <h3 class=" mb-3">Leave a Review</h3>
            <form action="/listings/<%= listingShow._id %>/reviews" method="POST"  class=" needs-validation" novalidate >
                
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-fade">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" class="form-control  mb-3" rows="5" cols="30" required></textarea>
                <div class="invalid-feedback mb-3">Please leave a Review</div>

                <button type="submit" class="btn btn-outline-dark mb-3">Submit</button>

            </form>
            <br>
        </div>
    <%}%>
    
    <%if(listingShow.reviews.length>0){%>
    <h4 class="offset-3">All Reviews</h4>
        <div class="row offset-3">
            <% for(review of listingShow.reviews){%>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h4 class="card-title"><i>@<%=review.author.username%></i></h4>
                        <p class="starability-result" data-rating="<%=review.rating%>"></p>
                        <p class="card-text"><%=review.comment%></p>
                        <% if(currUser && currUser._id.equals(review.author._id)){ %>
                            <form class="" action="/listings/<%=listingShow._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        <%}%>
                    </div>
                </div>
            <%}%>
        </div>
    <%}%>
    
    <div class="col-6 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>

    </div>
    <script src="/js/map.js"></script>

</body>
